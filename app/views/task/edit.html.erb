<section id="task-edit" class="container container-content mt-6">
<div class="columns">


  <div id="task-edit-left" class="column is-6 container-left">
    <%= image_tag :'create.task.svg'  %>
  </div>

  <div id="task-edit-right" class="column is-6 container-right">

    <%= render 'components/form_errors', instance: @task  %>

    <%= form_with model: @task, url: tasks_update_path, method: :patch, local: true do |f| %>
      <%= render 'task/form_fields', form: f , action: 'Update'%>
    <% end %>

  </div>


</div>
</section>