<section id="task-new" class="container container-content mt-6">
<div class="columns">


  <div id="task-new-left" class="column is-6 container-left">
    <%= image_tag :'create.task.svg'  %>
  </div>

  <div id="task-new-right" class="column is-6 container-right">

    <%= render 'components/form_errors', instance: @task  %>

    <%= form_with scope: :task, url: tasks_create_path, local: true, method: :post do |f| %>
      <%= render 'task/form_fields', form: f, action: 'Create' %>
    <% end %>

  </div>


</div>
</section>