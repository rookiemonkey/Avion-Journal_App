<%= render 'components/navigation' %>

<h1>CATEGORY INDEX</h1>

<ul>

  <% @categories.each do |category| %>

    <li>
      <%= category.name %>
      <%= link_to 'Show', categories_show_path(category) %>
      <%= link_to 'Edit', categories_edit_path(category) %>
      <%= link_to 'Delete', categories_delete_path(category), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>

  <% end %>

</ul>