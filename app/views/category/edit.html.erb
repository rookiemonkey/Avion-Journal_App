<section class="container container-content mt-6">
<div class="columns">


  <div class="column is-6 container-left">
    <%= image_tag :'create.svg'  %>
  </div>

  <div class="column is-6 container-right">

    <%= render 'components/form_errors', instance: @category  %>

    <%= form_with model: @category, url: categories_update_path, method: :patch do |f| %>
        <%= render 'category/form_fields', form: f, action: 'Update' %>
    <% end %>

  </div>


</div>
</section>

<%= render 'components/footer' %>