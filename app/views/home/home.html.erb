<%= render 'components/navigation' %>

<section class="container is-flex is-justify-content-space-between">
  <div>
    <h1 class="is-size-3 has-text-light">
      Hi 
      <span class="has-text-weight-medium">
        <%= current_user.first_name %>
      </span>!
    </h1>
  </div>  

  <div>
    <%= link_to categories_new_path, class: "button is-light ml-1" do %>
      <i class="fas fa-plus mr-3"></i> Journal
    <% end %>
    <%= link_to home_new_task_path, class: "button is-light ml-1" do %>
      <i class="fas fa-plus mr-3"></i> Task
    <% end %>
  </div>
</section>




<section class="container mt-6">

  <div class="box has-background-warning-ligth has-text-dark is-size-4 has-text-weight-semibold">
    <i class="fas fa-exclamation-circle has-text-warning mr-1"></i>
    <%= current_user.first_name %>, these tasks requires your attention!
  </div>

  <div class="tile tile-container is-ancestor">
    <% @tasks.each do |task| %>
      <%= render 'components/card_task', task: task %>
    <% end %>
  </div>

</section>




<section class="container container-content mt-6">

  <div class="box has-background-info-dark has-text-white is-size-4 has-text-weight-semibold">
    <i class="fas fa-book-reader mr-1"></i>
    Your Journals
  </div>

  <div class="tile tile-container is-ancestor">
    <% @categories.each do |category| %>
      <%= render 'components/card_category', category: category %>
    <% end %>
  </div>

</section>

<%= render 'components/footer' %>

<%= javascript_pack_tag 'task_button_link', 'data-turbolinks-track': 'reload' %>