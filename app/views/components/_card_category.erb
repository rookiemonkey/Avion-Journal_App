<div class="tile tile-item is-parent is-shady">
<article class="tile is-child notification is-white">


    <div class="tile-contents">
      <h3 class="title is-size-4 has-text-primary">
      <i class="fas fa-book mr-1"></i>
        <%= category.name %>
      </h3>

      <p class="subtitle is-size-7 mb-3 has-text-grey-light">
        <span class="mr-2">
          <i class="fas fa-cogs"></i>
          <%= category.tasks.length %> Tasks
        </span>
        <span class="mr-2 has-text-success">
          <i class="fas fa-check-circle"></i>
          <%= statistics[:completed] %> Completed
        </span>
      </p>

      <p class="subtitle is-size-6 has-text-light">
        <%= category.description %>
      </p>
    </div>


    <div class="tile-actions">
      <%= link_to tasks_path(category), class: :"button is-light action-tile-button has-text-light", title: "View Category" do %>
          <i class="fas fa-book-reader"></i>
      <% end %>

      <%= link_to categories_edit_path(category), class: :"button is-warning has-text-warning is-light action-tile-button", title: "Edit Category" do %>
          <i class="fas fa-edit"></i>
      <% end %>

      <button class="button is-danger is-light has-text-danger action-tile-button" data-categorydelete-btn="<%= category.id %>" title="Delete Category">
        <i class="far fa-trash-alt"></i>
      </button>
    </div>


</article>
</div>

<%= render 'components/modal_category_delete', category: category %>