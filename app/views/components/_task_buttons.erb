<% route = "#{params[:controller]}##{params[:action]}" %>

<% if route == 'task#show' %>
  <button class="button is-light action-tile-button">
    <%= render 'components/stimuli/checkbox_task', task: task %>
  </button>
<% end %>

<button class="to_clipboard_task button is-light action-tile-button has-text-link" data-url="<%= tasks_show_path(id: task.category_id, tid: task.id) %>" title="Link Task">
  <i class="fas fa-link"></i>
</button>

<% unless route == 'task#show' %>
  <%= link_to tasks_show_path(id: task.category_id, tid: task.id), class: :"button is-light action-tile-button", title: "View Task" do %>
      <i class="fas fa-book-reader has-text-light"></i>
  <% end %>
<% end %>

<%= link_to tasks_edit_path(id: task.category_id, tid: task.id), class: :"button is-warning is-light has-text-warning action-tile-button", title: "Edit Task" do %>
    <i class="fas fa-edit"></i>
<% end %>

<%= render 'components/stimuli/btn_task_delete', task: task %>