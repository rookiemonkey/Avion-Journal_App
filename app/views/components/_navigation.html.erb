<section class="hero banner-custom">
<div class="hero-body">
<div class="columns">
<div class="column is-12">
<div class="container content">

  <h1 class="title title-custom has-text-primary-light">
    <span class="title title-brand has-text-primary-light">
        <%= image_tag asset_path('brand.svg'), class: "title-icon mr-3" %>
        <%= link_to 'Satisfy', root_path, class: "title has-text-primary-light" %>
    </span>
    <span>
      <span>
        <i class="far fa-calendar-alt"></i> <%= date_full_words Time.now %>
      </span>

      <% unless current_user.nil? %>
        <%= link_to signout_path, method: :delete, class: "button is-warning" do %>
            <i class="fas fa-sign-out-alt mr-3"></i> Signout
        <% end %>
      <% end %>
    <span>
  </h1>

</div>
</div>
</div>
</div>
</section>