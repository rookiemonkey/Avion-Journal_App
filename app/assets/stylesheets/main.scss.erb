@import './variables.scss';
@import 'bulma/bulma';
@import 'toastr/build/toastr.min';

::placeholder {
  color: rgba($color: white, $alpha: 0.5) !important
}

html {
  background-color: #1b1f3a;
}

body {
  background-image: url(<%= asset_path 'wave.svg' %>);
  background-repeat: no-repeat;
  color: #ececec;
  font-family: 'Poppins', sans-serif !important;
}

.container-content {
  min-height: 500px;
}

.tile-container {
  display: grid !important;
  grid-template-columns: 1fr 1fr 1fr 1fr;
}

.tile-item {
  cursor: pointer;
  min-height: 250px !important;
}

.tile-item,
.tile-item .is-child {
  background-color: $orange-blue !important;
}

.tile-actions {
  display: flex;
  justify-content: flex-end;
}

.action-tile-button {
  background-color: transparent !important;
}

.action-tile-button:focus {
  box-shadow: none !important;
}

.notification {
  padding: 1.25rem !important;
}

.is-secondary {
  background-color: transparent;
  border-color: $info;
  color: white;
}

.is-secondary:focus {
  border-color: none !important;
  box-shadow: none !important;
}

.is-secondary:hover {
  color: $info !important;
  border-color: transparent;
}

.has-text-primary {
  color: $orange !important;
}

.is-shady {
  background: #fff;
  box-shadow: rgba(0, 0, 0, .1) 0 1px 0;
  border-radius: 4px;
  display: inline-block;
  margin: 10px;
  position: relative;
  transition: all .2s ease-in-out;
}

.is-shady:hover {
  box-shadow: 0 10px 16px rgba(0, 0, 0, .13),
    0 6px 6px rgba(0, 0, 0, .19);
}

.is-child {
  display: flex !important;
  flex-direction: column;
  justify-content: space-between;
}

.has-background-info-dark {
  background-color: $orange !important
}

.maximize {
  min-height: 540px;
}

.when-empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.when-empty img {
  width: 30%;
}

div.field div.control input,
div.field div.control select,
div.field div.control textarea {
  background-color: $info;
  border-color: $info;
  color: white;
}

div.field div.control input:focus {
  border-color: none !important;
  box-shadow: none !important;
}

.control.has-icons-right .input:focus~.icon {
  color: white;
}

.categories-progress-container {
  width: 50%;
}

.task-progress-container {
  width: 50%;
}

.task-progress-container .progress-container {
  width: 100%;
}