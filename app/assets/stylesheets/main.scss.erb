@import './variables.scss';
@import 'bulma/bulma';
@import 'toastr/build/toastr.min';

@font-face {
  font-family: 'Poppins';
  font-style: normal;
  font-weight: 400;
  font-display: swap;
  src: url(<%= asset_path('poppins_400.woff2') %>) format('woff2');
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
}

@font-face {
  font-family: 'Poppins';
  font-style: normal;
  font-weight: 600;
  font-display: swap;
  src: url(<%= asset_path('poppins_600.woff2') %>) format('woff2');
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
}

::placeholder {
  color: rgba($color: white, $alpha: 0.5) !important
}

html {
  background-color: #1b1f3a;
}

body {
  background-image: url(<%= asset_path 'wave.svg' %>);
  background-repeat: no-repeat;
  color: #ececec;
  font-family: 'Poppins', sans-serif !important;
}

.container-content {
  min-height: 500px;
}

.tile-container {
  display: grid !important;
  grid-template-columns: 1fr 1fr 1fr 1fr;
}

.tile-item {
  cursor: pointer;
  min-height: 250px !important;
}

.tile-item,
.tile-item .is-child {
  background-color: $orange-blue !important;
}

.tile-actions {
  display: flex;
  justify-content: flex-end;
}

.action-tile-button {
  background-color: transparent !important;
}

.action-tile-button:focus {
  box-shadow: none !important;
}

.notification {
  padding: 1.25rem !important;
}

.is-secondary {
  background-color: transparent;
  border-color: $info;
  color: white;
}

.is-secondary:focus {
  border-color: none !important;
  box-shadow: none !important;
}

.is-secondary:hover {
  color: $info !important;
  border-color: transparent;
}

.has-text-primary {
  color: $orange !important;
}

.is-shady {
  background: #fff;
  box-shadow: rgba(0, 0, 0, .1) 0 1px 0;
  border-radius: 4px;
  display: inline-block;
  margin: 10px;
  position: relative;
  transition: all .2s ease-in-out;
}

.is-shady:hover {
  box-shadow: 0 10px 16px rgba(0, 0, 0, .13),
    0 6px 6px rgba(0, 0, 0, .19);
  transform: translateY(-5px);
}

.is-child {
  display: flex !important;
  flex-direction: column;
  justify-content: space-between;
}

.has-background-info-dark {
  background-color: $orange !important
}

.maximize {
  min-height: 540px;
}

.when-empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.when-empty img {
  width: 30%;
}

div.field div.control input,
div.field div.control select,
div.field div.control textarea {
  background-color: $info;
  border-color: $info;
  color: white;
}

div.field div.control input:focus {
  border-color: none !important;
  box-shadow: none !important;
}

.control.has-icons-right .input:focus~.icon {
  color: white;
}

.categories-progress-container {
  width: 50%;
}

.task-progress-container {
  width: 50%;
}

.task-progress-container .progress-container {
  width: 100%;
}

.checkbox {
  zoom: 1.5;
}

@media only screen and (max-width: 768px) {

  .tile-container {
    grid-template-columns: 1fr 1fr;
  }

  .is-parent>article.is-child {
    height: 100%
  }

  #home-dashboard-top,
  #home-dashboard-bottom,
  #task-index-top,
  #task-index-bottom {
    padding-left: $spacing-lg;
    padding-right: $spacing-lg;
  }


  #home-index>.columns,
  #sessions-new>.columns,
  #registrations-new>.columns,
  #passwords-new>.columns,
  #passwords-edit>.columns,
  #registrations-edit>.columns,
  #category-edit>.columns,
  #category-new>.columns,
  #home-new_task>.columns,
  #task-edit>.columns,
  #task-new>.columns,
  #task-show>.columns {
    width: 100%;
    margin-left: 0px;
    margin-right: 0px;
  }


  #home-index-left,
  #sessions-new-left,
  #registrations-new-left,
  #passwords-new-left,
  #passwords-edit-left,
  #registrations-edit-left,
  #category-edit-left,
  #category-new-left,
  #home-new_task-left,
  #task-edit-left,
  #task-new-left {
    margin-left: 0px;
    margin-right: 0px;
    padding-left: 0px;
    padding-right: 0px;
  }


  #sessions-new-right,
  #registrations-new-right,
  #passwords-new-right,
  #passwords-edit-right,
  #registrations-edit-right,
  #category-edit-right,
  #category-new-right,
  #home-new_task-right,
  #task-edit-right,
  #task-new-right {
    padding: $spacing-lg;
  }


  #home-index-right {
    padding: $spacing-lg+$spacing-lg+$spacing-lg
  }

  #task-show-left,
  #task-show-right {
    padding: $spacing-lg+$spacing-lg;
  }
}